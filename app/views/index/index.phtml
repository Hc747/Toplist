<section class="section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-sm-12 col-lg-3">
                <div class="card shadow-sm mb-2">
                    <div class="card-body">
                        <div class="rounded-circle bg-primary float-right stat-icon">
                            <i class="fal fa-user fa-lg mt-1 text-white"></i>
                        </div>
                        <small class="text-uppercase text-muted mb-0">Users</small>
                        <h5 class="font-weight-bold mb-0 text-primary">{{ users|number_format(0) }}</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-3">
                <div class="card shadow-sm mb-2">
                    <div class="card-body">
                        <div class="rounded-circle bg-danger float-right stat-icon">
                            <i class="fal fa-server fa-lg mt-1 text-white"></i>
                        </div>
                        <small class="text-uppercase text-muted mb-0">Servers</small>
                        <h5 class="font-weight-bold mb-0 text-danger">{{ servers|number_format(0) }}</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-3">
                <div class="card shadow-sm mb-2">
                    <div class="card-body">
                        <div class="rounded-circle bg-info float-right stat-icon">
                            <i class="fal fa-vote-yea fa-lg mt-1 text-white"></i>
                        </div>
                        <small class="text-uppercase text-muted mb-0">Votes</small>
                        <h5 class="font-weight-bold mb-0 text-info">{{ votes|number_format(0) }}</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-3">
                <div class="card shadow-sm mb-2">
                    <div class="card-body">
                        <div class="rounded-circle bg-primary float-right stat-icon">
                            <i class="fal fa-user fa-lg mt-1 text-white"></i>
                        </div>
                        <small class="text-uppercase text-muted mb-0">Users</small>
                        <h5 class="font-weight-bold mb-0 text-primary">{{ users|number_format(0) }}</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-lg-8">

                {{ content() }}

                {% for article in articles %}
                {% set avatar = avatar(article.user_id, article.avatar) %}
                <div class="card shadow-sm mb-3">
                    <div class="card-header" style="line-height: 0.8em;">
                        {{ image(avatar, 'class' : 'float-left rounded-circle mr-3', 'width' : '60px') }}

                        <h4 class="mb-0 text-primary">{{ article.title }}</h4>
                        <span class="mb-0 small text-muted">
                            by {{ article.username }} | {{ date("M. d g:i A", article.date_posted) }}
                        </span>
                    </div>

                    <div class="card-body">
                        {{ article.news_body }}
                        {#<a href="#" class="btn btn-link mb-0 px-0">View article</a>#}
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="col-sm-12 col-lg-4">
                <div id="discord"></div>

            </div>
        </div>
    </div>
</section>


<section class="section section-primary">
    <div class="container">
        <div class="row row-grid justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="display-3">Do you like this project? <span class="text-success">Fork us on Github!</span></h2>
                <p class="lead">
                    Feel free to fork us on github and submit any issues you come across!
                </p>
                <div class="btn-wrapper">
                    <a href="https://github.com/OGKingFox/Toplist" class="btn btn-primary mb-3 mb-sm-0">
                        Fork on Github
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<script>
    setTimeout(function() {
        $.post('{{ url("index/discord") }}', function(data) {
            $('#discord').html(data);
        });
    }, 1000);
</script>