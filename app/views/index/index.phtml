<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-9">
                {{ content() }}

                {% for article in articles %}
                {% set avatar = avatar(article.user_id, article.avatar) %}
                <div class="card shadow-sm mb-3 overflow-hidden">
                    <div class="card-body p-0">
                        <div class="d-flex flex-lg-row flex-column">
                            <div class="flex-fill text-center bg-primary py-lg-5 py-sm-3 card-author">
                                {{ image(avatar, 'class' : 'rounded-circle mb-3', 'width' : '96px') }}

                                <h5 class="mb-0 text-white">{{ article.username }}</h5>
                                <p class="text-white-50 mb-0">{{ article.role }}</p>
                            </div>
                            <div class="flex-fill w-100 py-5 px-4">
                                {{ article.news_body }}
                                <p class="small text-muted mb-0">
                                    {{ date("M. d, Y | g:i A", article.date_posted) }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-sm-12 col-lg-3">
                <div class="card border-0 shadow-sm overflow-hidden">
                    <a href="https://discord.gg/D5bQ4qG" target="_blank">
                    <img src="https://discordapp.com/api/guilds/198682930338463744/widget.png?style=banner4"
                         class="img-fluid" alt="https://discord.gg/D5bQ4qG">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
