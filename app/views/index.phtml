<body class="py-0 my-0">

{% if router.getControllerName() is not 'login' and router.getControllerName() is not 'register' %}
    <div class="top-bar bg-darker">
        <div class="container">
            <ul class="custom-nav float-right">
                {% if user is defined %}
                <li class="nav-item">Welcome, {{ user.username }}</li>
                <li class="nav-item">{{ link_to('account', 'My Account') }}</li>
                <li class="nav-item">{{ link_to('index/logout', 'Sign Out') }}</li>
                {% else %}
                <li class="nav-item">Welcome, Guest</li>
                <li class="nav-item">{{ link_to('login', 'Login') }} or {{ link_to('register', 'Create Account') }}</li>
                {% endif %}
            </ul>
            <ul class="custom-nav">
                <li class="nav-item"><a href="#" target="_blank"><i class="fab fa-facebook"></i></a></li>
                <li class="nav-item"><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
                <li class="nav-item"><a href="#" target="_blank"><i class="fab fa-discord"></i></a></li>
            </ul>
        </div>
    </div>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark shadow-sm sticky-top" style="top:40px;">
        <div class="container">
            <a class="navbar-brand" href="#"><i class="fal fa-chart-bar"></i> RuneList</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">{{ link_to('', 'Home', 'class' : 'nav-link') }}</li>
                    <li class="nav-item">{{ link_to('forum', 'Forums', 'class' : 'nav-link') }}</li>
                    <li class="nav-item">{{ link_to('advertise', 'Advertise', 'class' : 'nav-link') }}</li>
                    <li class="nav-item">{{ link_to('support', 'Support', 'class' : 'nav-link') }}</li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="text-left">
        <div class="container">
            <h3 class="mb-0">Runescape Top List</h3>
        </div>
    </header>
{% endif %}

    {{ content() }}
    
</body>
</html>