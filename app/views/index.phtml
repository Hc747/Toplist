	<meta name="author" content="King Fox">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="shortcut icon" type="image/png" href="<?= base_url; ?>public/img/favicon.png"/>

    {{ stylesheet_link("css/bootstrap.min.css") }}
    {{ stylesheet_link("css/fontawesome.min.css") }}
    {{ stylesheet_link("css/stylesheet.css") }}

    {{ javascript_include("js/jquery-3.3.1.min.js") }}
    {{ javascript_include("js/bootstrap.bundle.min.js") }}
    {{ javascript_include("js/javascript.js") }}
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient shadow">
        <div class="container">
            <a class="navbar-brand" href="#">Gaming Toplist</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">{{ link_to('', 'Home', 'class' : 'nav-link') }}</li>
                    <li class="nav-item"><a class="nav-link" href="#">Documentation</a></li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    {% if user is defined %}
                    <li class="nav-item">{{ link_to('profile', user.username, 'class' : 'nav-link') }}</li>
                    <li class="nav-item">
                       {{ link_to('logout', 'Logout', 'class' : 'nav-link') }}
                    </li>
                    {% else %}
                    <li class="nav-item">{{ link_to('login', 'Login', 'class' : 'nav-link') }}</li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <section class="content py-5">
        <div class="container">
            {{ content() }}
        </div>
    </section>

</body>
</html>